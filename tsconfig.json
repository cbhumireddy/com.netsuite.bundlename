{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "esnext",
      "dom"
    ],
    "module": "amd", //es6
    "moduleResolution": "node",
    "newLine": "LF",
    "noEmitOnError": true,
    "outDir": "FileCabinet/SuiteApps/com.netsuite.bundlename/dist/compiled",
    "paths": {
      "N": [
        "node_modules/@hitc/netsuite-types/N"
      ],
      "N/*": [
        "node_modules/@hitc/netsuite-types/N/*"
      ]
    },
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5" //esNext
  },
  "exclude": [
    "build/*",
    "test/**/*"
  ],
  "include": [
    "src/**/*"
  ]
}